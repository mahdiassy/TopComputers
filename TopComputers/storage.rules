rules_version = '2';

// COST OPTIMIZED Firebase Storage rules for TopComputers
service firebase.storage {
  match /b/{bucket}/o {
    // Product images - allow read by everyone, write only by authenticated users
    match /products/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.resource.size < 5 * 1024 * 1024 // Max 5MB per image
        && request.resource.contentType.matches('image/.*');
    }
    
    // Brand logos - allow read by everyone, write only by authenticated users
    match /brands/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.resource.size < 2 * 1024 * 1024 // Max 2MB per logo
        && request.resource.contentType.matches('image/.*');
    }
    
    // Service images (main image, applications icons, content section images)
    match /services/{serviceId}/{rest=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024 // Max 5MB per image
        && request.resource.contentType.matches('image/.*');
    }
    
    // Media Library - centralized media storage
    match /media/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024 // Max 10MB per image
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }
    
    // User profile images
    match /users/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024 // Max 2MB per profile image
        && request.resource.contentType.matches('image/.*');
    }
    
    // Temporary uploads (auto-deleted after 24 hours)
    match /temp/{uploadId} {
      allow read, write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024; // Max 10MB for temp files
    }
    
    // Block all other paths to prevent unauthorized uploads
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
